<%= form_with url: movies_path, method: :get, local: true do |form| %>
  <div class="field has-addons">
    <div class="control">
      <%= form.text_field :query, placeholder: "Search for an actor", class: "input" %>
    </div>
    <div class="control">
      <%= form.submit "Search", class: "button is-info" %>
    </div>
  </div>
<% end %>
